<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/selectSoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Notification Sound"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ListView
        android:id="@+id/soundListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectSoundText"
        android:layout_marginTop="20dp"
        android:choiceMode="singleChoice"/>

    <Button
        android:id="@+id/saveSoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Sound"
        android:layout_below="@id/soundListView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>